pipeline {
    agent { label 'abhi-linux' } // Runs on Linux agent

    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'master', description: 'Git branch to build')
    }

    options {
        timeout(time: 30, unit: 'MINUTES')
    }

    stages {
        stage('Build') {
            steps {
                echo "Building application from branch: ${master}"
                sh '''
                    git clone --depth 1 -b ${BRANCH_NAME} https://github.com/AbhishekJadhav1996/CICD_Pipeline2.git
                    cd CICD_Pipeline2
                    mvn clean package
                '''
            }
        }

        stage('Test') {
            steps {
                echo "Running tests on branch: ${C2-1-Login-Page}"
                sh '''
                    cd CICD_Pipeline2
                    mvn test
                '''
            }
        }

    }

    post {
        success {
            echo "Build and deployment successful for branch: ${BRANCH_NAME}"
        }
        failure {
            echo "Build failed for branch: ${BRANCH_NAME}"
        }
    }
}
