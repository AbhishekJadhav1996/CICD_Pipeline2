pipeline {
    agent { label 'abhi-linux' } // Runs on Linux agent

    stages {
        stage('Build') {
            steps {
                echo "Building application from branch: master"
                sh '''
                    cd CICD_Pipeline2
                    mvn clean package
                '''
            }
        }

        stage('Test') {
            steps {
                echo "Running tests on branch: C2-1-Login-Page"
                sh '''
                    cd CICD_Pipeline2
                    mvn test
                '''
            }
        }

    }

    post {
        success {
            echo "Build and deployment successful for branch: ${BRANCH_NAME}"
        }
        failure {
            echo "Build failed for branch: ${BRANCH_NAME}"
        }
    }
}
